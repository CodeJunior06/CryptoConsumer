<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/splashFragment"
    android:id="@+id/splash">

    <fragment
        android:id="@+id/initFragment"
        android:name="com.codejunior.cryptoconsumer.view.fragments.InitFragment"
        android:label="fragment_init"
        tools:layout="@layout/fragment_init" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.codejunior.cryptoconsumer.view.fragments.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_initFragment"
            app:destination="@id/initFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>